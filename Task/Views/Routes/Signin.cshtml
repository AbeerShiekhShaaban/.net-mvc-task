

<h2>Sign In</h2>

@using (Html.BeginForm("Signin", "Routes", FormMethod.Post, new { @class = "form-horizontal", role = "form"}))
{
    <div class="form-group">
        <label>Email:</label><br />
        <div class="col-md-10">
            @Html.TextBox("Email", "", new { @class = "form-control", required = "true", placeholder = "Enter your email" })
        </div>
    </div>

    <div></div>

    <div class="form-group">
        <label>Password:</label><br />
        <div class="col-md-10">
            @Html.Password("Password", "Enter your password", new { @class = "form-control", placeholder = "Enter your password",required = "true"})
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" />
        </div>
    </div>
}


